<!DOCTYPE html>
<html lang="es">
	<%- include('./partials/head') %> 

<body>
	<% if (logueado) { %>
		<%- include('./partials/headerLogueado')%>
		<% } else { %>
		<%- include('./partials/header')%>
		<% } %>	

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=profile.foto_perfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= profile.usuario %> 
						<a href="./profiles/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= profile.email%> </li>
						<li><%= lista.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

			<% for( let i = 0; i < lista.length; i++ ) { %>
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/id/<%= lista[i].id%> ">
						<figure class="product-box_image">
							<img src="<%= lista[i].imagen %>">
						</figure>
						<article class="product-box_data">
							<h2><%= lista[i].marca %></h2>
							<p><%= lista[i].model%></p>
						</article>
					</a>
				</section>
			</div>

			<% } %>

		</div>
	</div>
	<!-- /Mis productos -->
	<%- include('./partials/footer') %> 

	
</body>	
</html>